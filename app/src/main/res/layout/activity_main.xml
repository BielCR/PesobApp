<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--Cabecalho-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@mipmap/pesob_foto"
                        android:layout_gravity="top" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/gradient_inicio_titulo" />

                    <TextView
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:text="Parque Estadual Serra do Ouro Branco"
                        android:textSize="27sp"
                        android:textColor="@color/vermelhoLogo"
                        android:fontFamily="@font/lm_bold_italic"
                        android:gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="75dp" />
                </FrameLayout>

                <!--Informacao principal do PESOB-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_pesob"
                    android:textSize="19sp"
                    android:fontFamily="@font/lm_medium_italic"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"/>

                <!--Objetivos-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginTop="40dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@mipmap/pesob2"
                            android:layout_gravity="top" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_inicio_conteudo_rl" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_inicio_conteudo_tb"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Objetivos"
                            android:textSize="23sp"
                            android:textColor="@color/vermelhoLogo"
                            android:fontFamily="@font/lm_medium_italic"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/info_objetivo"
                            android:textSize="19sp"
                            android:fontFamily="@font/lm_medium_italic"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>
                </FrameLayout>

                <!--Aspectos Naturais-->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="100dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginTop="40dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@mipmap/pesob3"
                            android:layout_gravity="top" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_inicio_conteudo_rl" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_inicio_conteudo_tb"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aspectos Naturais"
                            android:textSize="23sp"
                            android:textColor="@color/vermelhoLogo"
                            android:fontFamily="@font/lm_medium_italic"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/info_aspectos1"
                            android:textSize="19sp"
                            android:fontFamily="@font/lm_medium_italic"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/info_aspectos2"
                            android:textSize="19sp"
                            android:fontFamily="@font/lm_medium_italic"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </ScrollView>

        <!--Botoes-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            android:background="@drawable/arrendondado"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/fogoBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/click_button"
                android:src="@drawable/ic_baseline_whatshot_24" />

            <ImageButton
                android:id="@+id/infoBtn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/click_button"
                android:src="@drawable/ic_baseline_info_24" />

        </LinearLayout>
    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>